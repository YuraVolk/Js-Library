{
	"name": "js-lit-components-library",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"description": "A library of JavaScript-based components built with Lit, React and Vue.",
	"browserslist": "fully supports async-functions",
	"scripts": {
		"start": "webpack serve",
		"build": "webpack --mode production",
		"setup": "npm install",
		"lint": "eslint **/*.{ts,tsx} && npm run lint:local",
		"lint:local": "lit-analyzer 'src/**/*.{js,ts}'",
		"lint:sarif": "eslint **/*.{ts,tsx} --format @microsoft/eslint-formatter-sarif --output-file eslint-results-lit.sarif",
		"type-check": "tsc --pretty --noEmit"
	},
	"author": "Yuriy Volkovskiy",
	"devDependencies": {
		"css-loader": "^6.10.0",
		"external-remotes-plugin": "^1.0.0",
		"html-loader": "^5.0.0",
		"html-webpack-plugin": "^5.6.0",
		"lit-analyzer": "^2.0.3",
		"mini-css-extract-plugin": "^2.8.1",
		"style-loader": "^3.3.4",
		"ts-lit-plugin": "^2.0.2",
		"ts-loader": "^9.5.1",
		"typescript": "^5.4.3",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^5.0.4"
	},
	"dependencies": {
		"@lit/context": "^1.1.0",
		"lit": "^3.1.2"
	}
}
